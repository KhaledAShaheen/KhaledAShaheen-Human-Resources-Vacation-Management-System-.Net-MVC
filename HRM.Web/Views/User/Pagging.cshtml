@model HRM.Web.Models.Pagging

@{
    ViewData["Title"] = "Pagging";
}

<h1>Pagging List</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="List">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Page" class="control-label"></label>
                <input asp-for="Page" class="form-control" />
                <span asp-validation-for="Page" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemsPerPage" class="control-label"></label>
                <input asp-for="ItemsPerPage" class="form-control" />
                <span asp-validation-for="ItemsPerPage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input id="reset"  type="submit" value="List" onclick="location.href='@Url.Action("List", "User")'" />

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

